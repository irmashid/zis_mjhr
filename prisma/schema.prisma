generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model Transaction {
  id          Int      @id @default(autoincrement())
  type        TransactionType
  amount      Float
  amount_rice Float?
  description String?
  muzakkiName String
  receiptId   String?
  paymentAmount Float?
  kembalian     Float?
  createdAt   DateTime @default(now())
  
  // Relations
  createdById String?  @db.Uuid
  createdBy   User?    @relation("CreatedTransactions", fields: [createdById], references: [id], onDelete: SetNull)
  updatedById String?  @db.Uuid
  updatedBy   User?    @relation("UpdatedTransactions", fields: [updatedById], references: [id], onDelete: SetNull)
}

model User {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username      String    @unique
  nama_lengkap  String
  password_hash String
  role          Role      @default(PANITIA_ZIS)
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt

  // Relations
  createdTransactions Transaction[] @relation("CreatedTransactions")
  updatedTransactions Transaction[] @relation("UpdatedTransactions")
  activities          ActivityLog[]

  @@index([role])
  @@map("users")
}

model ActivityLog {
  id        Int      @id @default(autoincrement())
  userId    String   @db.Uuid
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  action    String   // e.g., "LOGIN", "LOGOUT", "CREATE_TRANSACTION", "UPDATE_TRANSACTION", "DELETE_TRANSACTION"
  details   String   // The descriptive text requested by user
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
  @@map("activity_logs")
}

enum TransactionType {
  FITRAH_UANG
  FITRAH_BERAS
  MAL
  INFAQ
  SODAQOH
}

enum Role {
  ADMINISTRATOR
  PANITIA_ZIS
}
