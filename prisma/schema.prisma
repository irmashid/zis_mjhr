generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Transaction {
  id          Int      @id @default(autoincrement())
  type        TransactionType
  amount      Float
  amount_rice Float?
  description String?
  muzakkiName String
  receiptId   String?  // Optional for backward compatibility, but generated for new ones
  paymentAmount Float?
  kembalian     Float?
  createdAt   DateTime @default(now())
}

enum TransactionType {
  FITRAH_UANG
  FITRAH_BERAS
  MAL
  INFAQ
  SODAQOH
}
